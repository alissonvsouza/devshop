<%- include('../header') %>

<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-secondary">
    <div class="container clearfix">
        <h2 class="title-page">Admin</h2>
    
        <nav class="float-left">
        <ol class="breadcrumb text-white">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
        </ol>  
        </nav>
    </div> <!-- container //  -->
    </section>
    <!-- ========================= SECTION INTRO END// ========================= -->
    
    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content bg padding-y">
    <div class="container">
    
    <div class="row">
        <main class="col-sm-12">
    
            <a href="/administration/categories/new" class="btn btn-primary"> Nova categoria </a>
    
            <article class="card card-product">
        
                <div class="card">
                    <header class="card-header">
                        <h4 class="card-title mt-2">Criar nova categoria</h4>
                    </header>
                    <article class="card-body">
                        <form method="POST">
                            <div class="form-group">
                                <div class="col form-group">
                                    <label>Categoria</label>
                                    <input name="category" type="text" class="form-control" placeholder="">
                                </div>
                                <div class="col form-group">
                                    <label>Descrição</label>
                                    <textarea name="description" class="form-control" placeholder=""></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block"> Salvar nova categoria  </button>
                            </div>
                        </form>
                    </article> <!-- card-body end .// -->
                </div>
            </article>
        </main> <!-- col.// -->
    </div>
    
    </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
